  .content-text-style
    color #fff
    text-align justify
    text-justify inter-word
  .content-bg-image
    position absolute
    width 100%
    z-index -1
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    &:after
      content: "";
      width: 90%;
      height: 90%;
      position: absolute;
      background rgba(0, 0, 0, 0)
      left:0 ;
      top: 0;
      filter: blur(18rpx)
      z-index: 2
